  border solid 1px #5E5E5E
  border-color #5E5E5E #888888 #696969 #888888
  -webkit-border-radius 16px
  -moz-border-radius 16px
  border-radius 16px
  padding 0px 24px 0px 24px
  display inline-block
  font-size 15px
  line-height 32px
  color rgba(51,51,51,1)
