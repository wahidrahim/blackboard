body
  background-color: rgba(255, 255, 0, 0.5)
  background-image: url("http://www.transparenttextures.com/patterns/asfalt-dark.png");
  font-family sans-serif

  p
    padding: 10px
    font-size: 2em

.canvas-container
  margin: 0 auto

canvas
  border-radius: 5px

*
  margin: 0
  padding: 0

#chat, #controls
  position: fixed
  bottom: 0

#controls
  background-color: rgba(255, 0, 255, 0.5)
  border-top-left-radius: 5px
  display: table

  *
    display: table-cell
    margin: 10px

  button
    text-align: center
    width: 110px
    height: 110px

#inputs
  width: 110px
  *
    position: absolute
    width 110px

  #color
    top 5px
  #width
    top 45px
  #widthField
    top 85px

#brush-style
  left: 30px
  position: relative
  width: 150px
  background-color: #222
  border-top-right-radius: 5px

  #brush
    margin-bottom: 100px
    position absolute
    top: 45%
    left: 42%
    transform translate(-50%, -50%)

#chat
  border-top-left-radius: 5px
  border-top-right-radius: 5px
  background-color: rgba(0, 255, 255, 0.5)
  padding 10px
  width 520px
  right: 0

  #messages-container
    overflow-y: scroll
    height 100px

    li
      list-style-type: none

  #message
    margin-top: 10px
    width: 100%
#brush
  border-radius: 100%

.user
  border-radius: 100%

.button
