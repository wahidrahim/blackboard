doctype html
html
  head
    meta(charset='utf-8')
    link(rel='shortcut icon' href='img/favicon.png')
    link(rel='stylesheet' href='css/styles.css')

  body
    p users connected: #[span#connected]

    #canvas-container
      canvas#canvas

    #controls
      button#undo.button undo
      button#color-button.button(href='#' class="jscolor {hash:true, valueElement:'color', styleElement:'brush'}") color
      #inputs
        input#color
        input#width(type='range' value='5' min='1' max='100' name='width')
        input#widthField
      #brush-style
        #brush

    #chat
      #messages-container
        ul#messages

      #messageForm
        form
          //-input#submit(type='submit' value='send')
          input#message(placeholder='send message')

    script(src='lib/jquery-1.12.0.min.js')
    script(src='lib/fabric.min.js')
    script(src='lib/socket.io.js')
    script(src='lib/jscolor.min.js')
    script(src='js/blackboard.js')
    script(src='js/events.js')
