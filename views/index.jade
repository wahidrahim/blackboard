doctype html
html
  head
    meta(charset='utf-8')
    link(rel='shortcut icon' href='img/favicon.png')
    link(rel='stylesheet' href='css/styles.css')

  body
    p users connected: #[span#connected]

    #canvas-container
      canvas#canvas

    #controls
      | color:
      input#color.jscolor(class='{hash:true}' value='#F0F0F0')
      | width:
      input#width(type='range' value='5' min='1' max='50' name='width')
      input#widthField
      #brush-style
      button#undo undo

    #messageForm
      form
        input#message(placeholder='send message')
        input#submit(type='submit' value='send')

    #messages-container
      | messages:
      ul#messages

    script(src='lib/jquery-1.12.0.min.js')
    script(src='lib/fabric.min.js')
    script(src='lib/socket.io.js')
    script(src='lib/jscolor.min.js')
    script(src='js/blackboard.js')
    script(src='js/events.js')
